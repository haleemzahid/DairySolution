                </ToggleButton>

                <Image Grid.Column="2" Source="Assets/Logo/logo.jpg" Height="50" Stretch="Uniform"/>

                <Border Grid.Column="4" Height="40" BorderThickness="1" Padding="10 0" CornerRadius="3">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon VerticalAlignment="Center" Kind="Search" Width="30" Height="30">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource PrimaryHueMidBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="False">
                                            <Setter Property="Foreground" Value="#BBBBBB"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                        <TextBox VerticalAlignment="Center" x:Name="SearchTextBox" Background="Transparent" Grid.Column="2" materialDesign:TextFieldAssist.DecorationVisibility="Visible" BorderThickness="0" materialDesign:HintAssist.Hint="Search">

                        </TextBox>
                    </Grid>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryHueMidBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="False">
                                    <Setter Property="BorderBrush" Value="#DDDDDD"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="True">
                                    <Setter Property="Background" Value="#FAFAFA"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="False">
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                </DataTrigger>
                            </Style.Triggers>
