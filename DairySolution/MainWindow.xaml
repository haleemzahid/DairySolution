    <mahapps:MetroWindow.Resources>
        <Style TargetType="TextBlock" x:Key="SideBarTitle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
