                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <ToggleButton x:Name="SideBarToggleButton" Style="{StaticResource MaterialDesignFlatButton}" Padding="0" Foreground="#444444" Height="50" IsChecked="True" HorizontalAlignment="Left" Width="50">
